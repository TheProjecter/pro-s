<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.ui.templateDir" value="template" />
	<constant name="struts.ui.templateSuffix" value="ftl" />

	<package name="system" namespace="/pages/system" extends="struts-default">
		<!--受权限控制的Action请求配置 -->
		<interceptors>
			<!--定义一个名为authority的拦截器 -->
			<interceptor
				class="com.wozeze.pros.interceptor.AuthorityInterceptor"
				name="authority" />
			<!--定义一个包含权限检查的拦截器栈 -->
			<interceptor-stack name="mydefault">
				<!--配置内建默认拦截器 -->
				<interceptor-ref name="defaultStack" />
				<!--配置自定义的拦截器 -->
				<interceptor-ref name="authority" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="mydefault" />
		<!--定义全局Result -->
		<global-results>
			<result name="login">/pages/system/user_login.jsp</result>
		</global-results>
		
		<!-- 从action访问页面, 否则验证功能不好使 -->
		<action name="*T">
			<result>{1}.jsp</result>
		</action>
		
		<action name="userAction" class="com.wozeze.pros.action.system.UserAction">
			<result name="registerPage">/pages/system/user_register.jsp</result>
			<result name="input">/pages/demo/success.jsp</result>
			<result name="error">/pages/demo/success.jsp</result>
		</action>
	</package>

	<package name="default" namespace="/pages/demo" extends="struts-default">
		<!-- 从action访问页面, 否则验证功能不好使 -->
		<action name="*T">
			<result>{1}.jsp</result>
		</action>

		<action name="loginAction" class="com.wozeze.pros.demo.action.UserAction">
			<result name="success">/pages/demo/success.jsp</result>
			<result name="input">/pages/demo/user.jsp</result>
			<result name="error">/pages/demo/failure.jsp</result>
		</action>

		<action name="user_*"
			class="com.wozeze.pros.demo.action.UserActionWithMethods" method="{1}">
			<result name="success">/pages/demo/user_{1}_success.jsp</result>
			<result name="input">/pages/demo/user_{1}.jsp</result>
			<result name="error">/pages/demo/user_{1}_failure.jsp</result>
		</action>
	</package>

	<package name="json" extends="json-default">
		<action name="jsonAction" class="com.wozeze.pros.demo.action.AjaxJsonUserAction">
			<result type="json">
				<!-- 将reslut的值返回给客户端,root的值对应要返回的值的属性 -->
				<param name="root">
					result
				</param>
			</result>
		</action>
	</package>

</struts>